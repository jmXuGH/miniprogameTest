/* pages/mine/mine.wxss */
.mine{
  position:absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0 35rpx;
}
.login{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
}
.login image{
  width: 112rpx;
  height: 112rpx;
  margin-right: 25rpx;
}
.login text{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.mine-tabs{
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mine-tabs view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mine-tabs text{
  font-size: 24rpx;
  color: #999;
}
.mine-tabs .num{
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
}
.mine-tabs image{
  width: 45rpx;
  height: 45rpx;
}
.mine-tabs .seven{
  color: #fff;
  background-color: rgba(47, 120, 255, 0.356862745098039);
  padding: 0 14rpx;
}
.mine-course{
  padding: 20rpx 0;
}
.mine-title{
  font-size: 36rpx;
  color: #333;
  font-weight: 700;
}
.mine-list{
  margin-top: 30rpx;
  width: 100%;
  height: 154rpx;
  box-shadow: 0px 2px 15px rgba(153, 153, 153, 0.349019607843137);
  border-radius: 8px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mine-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mine-item image{ 
  width: 44rpx;
  height: 44rpx;
}
.mine-item text{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.mine-bottomList{
  padding: 30rpx 0;
}
.mine-bottomItem{
  padding: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mine-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.mine-left image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.mine-left text{
  font-size: 28rpx;
  color: #333;
}
.mine-right{
  width: 25rpx;
  height: 28rpx;
}